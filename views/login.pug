extends layout

block title
    title Login

block content
    div.row.row-cols-auto.mt-5.shell
        div.col-sm-auto.mx-auto.mt-5.col-lg-4
            h5.text-center Sign in to Your Account
            form(action="/auth/login" method='POST')
                div.mb-3
                    label(for='em' class="form-label") Email
                    input(type='email' id="em" name="email" class="form-control")
                div.mb-3
                    label(for='pwd' class="form-label") Password
                    input(type='password' id="pwd" name="password" class="form-control")
                div.mb-3
                    button(type='submit' id='login' class="btn btn-primary px-3 rounded-top") Login
            h6 Not registered? #[a(href="/users/create") Create an Account]
